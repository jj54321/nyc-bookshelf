<div class="container">
	<h1>Bookshelf</h1>

	<form class="form-search">
    <div class="input-append">
        <input ng-model='query' class="span2 search-query">
        <button type="submit" class="btn">Search</button>
    </div>
</form>
<div class="btn-group" data-toggle="buttons">
  <label class="btn btn-primary active">
    <input type="checkbox" checked autocomplete="off" ng-click="genre = {genre:'action'}"> Action
  </label>
  <label class="btn btn-primary">
    <input type="checkbox" autocomplete="off" ng-click="genre = {genre:'fantasy'}"> Fantasy
  </label>
  <label class="btn btn-primary">
    <input type="checkbox" autocomplete="off"> Stuff
  </label>
</div>
	<!-- <button type="button" class="btn btn-primary" ng-click="genre = {genre:'action'}">Action</button> -->
	<ul>
		<li ng-repeat="book in books | filter:query | filter:genre">{{book.title}}</li>
	</ul>
</div>
