<form class="create-form" role="form" ng-submit="ctrl.createBook(ctrl.newBook)" novalidate>
<div class="form-group">
    <label>Book Name</label>
    <input type="text" class="form-control" ng-model="ctrl.newBook.title" placeholder="Enter name">
  </div>
<div class="form-group">
    <label>Book Author</label>
    <input type="text" class="form-control" ng-model="ctrl.newBook.author" placeholder="Enter author">
  </div>
  <button type="submit" class="btn btn-info btn-lg">Create</button>
</form>
